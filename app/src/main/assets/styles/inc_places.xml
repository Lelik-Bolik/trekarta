<?xml version="1.0" encoding="UTF-8"?>
<rendertheme version="1" xmlns="http://opensciencemap.org/rendertheme">
    <!-- places -->
    <m cat="places" k="place">
        <m v="neighbourhood|allotments">
            <text style="italic" priority="12" size="14" stroke-width="1.6"
                use="place_village" />
        </m>
        <m v="hamlet|isolated_dwelling">
            <text priority="10" use="place_village" />
        </m>
        <m v="suburb" zoom-max="14">
            <text priority="10" use="place_suburb" />
        </m>
        <m v="village">
            <text priority="9" use="place_village" />
        </m>
        <m select="first" v="town">
            <m k="admin_level" v="2">
                <text dy="14" priority="2" size="18" use="place_capital" />
            </m>
            <m k="admin_level">
                <text dy="12" priority="5" size="17" use="place_town" />
            </m>
            <m k="admin_level" v="~">
                <text dy="12" priority="8" size="17" use="place_town" />
            </m>
        </m>
        <m select="first" v="city">
            <m k="admin_level" v="2">
                <m zoom-min="7">
                    <text style="bold" dy="14" priority="2" size="18" use="place_capital" />
                </m>
                <m zoom-max="6">
                    <text dy="14" priority="2" size="18" use="place_capital" />
                </m>
            </m>
            <m k="admin_level">
                <m zoom-min="7">
                    <text style="bold" dy="14" priority="3" size="17" use="place_city" />
                </m>
                <m zoom-max="6">
                    <text dy="14" priority="3" size="17" use="place_city" />
                </m>
            </m>
            <m k="admin_level" v="~">
                <m zoom-min="7">
                    <text style="bold" dy="14" priority="7" size="17" use="place_city" />
                </m>
                <m zoom-max="6">
                    <text dy="14" priority="4" size="17" use="place_city" />
                </m>
            </m>
        </m>
        <m v="state">
            <m zoom-max="7" zoom-min="7">
                <text priority="6" size="16" stroke-width="2.0" use="place_country" />
            </m>
            <m zoom-max="6">
                <text priority="5" size="14" stroke-width="1.8" use="place_country" />
            </m>
        </m>
        <m v="country">
            <m zoom-max="10" zoom-min="6">
                <text priority="5" size="22" stroke-width="2.6" use="place_country" />
            </m>
            <m zoom-max="5" zoom-min="4">
                <text priority="1" size="18" stroke-width="2.2" use="place_country" />
            </m>
            <m zoom-max="3">
                <text priority="1" size="14" stroke-width="1.8" use="place_country" />
            </m>
        </m>
        <m v="locality" zoom-max="17">
            <text style="italic" priority="7" size="18" use="place" />
        </m>
        <m v="island" zoom-max="14">
            <text style="italic" priority="4" size="20" use="place" />
        </m>
        <m v="sea">
            <m zoom-min="5">
                <text caption="true" priority="6" size="18" use="water" />
            </m>
        </m>
        <m v="ocean">
            <m zoom-max="4" zoom-min="3">
                <text style="bold_italic" caption="true" priority="0" size="18" use="water" />
            </m>
            <m zoom-max="2">
                <text caption="true" priority="0" size="18" use="water" />
            </m>
        </m>
    </m>
</rendertheme>